<!DOCTYPE html>
<html lang="en">

  <head>
    <title>EventsHub</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/summary.js"></script>
  </head>

  <body>

    <div class="event-navigation">
      <button class="info active">Info</button>
      <button class="attending">Attending</button>
    </div>

    <div class="event-info">

      <section id ="summary">

        <h1>Your Event:</h1>

        <h2><%= data.event_name %></h2>
        <form action="/eventshub/event/<%=data.admin_url%>/edit-event-name" method="POST">
          <input id="newEventName" type="text" name="newEventName" placeholder="Update event name..." style="width: 200px">
          <input type="submit" value="Update">
        </form>

        <p><%=data.desc %></p>
        <form action="/eventshub/event/<%=data.admin_url%>/edit-event-description" method="POST">
          <textarea id="newEventDescription" type="text" name="newEventDescription" placeholder="Update event description..." style="width: 200px"></textarea>
          <input type="submit" value="Update">
        </form>

        <p><%= data.event_date %></p>

        <p><%= data.time %></p>

        <p><a href="http://localhost:8080/eventshub/event/<%=data.url%>/participant" target="_blank">Here is the your invitation page.</a></p>

      </section>

    </div>

    <div class="event-participants">

      <h1>Attending</h1>

      <% for (let i in participants) { %>
      <table>
        <tr><%=participants[i].first_name%> </tr>
        <tr><%=participants[i].last_name%> </tr>
        <tr><%=participants[i].event_confirmation%> </tr>
      </table>
      <% }; %>

    </div>

  </body>

</html>
